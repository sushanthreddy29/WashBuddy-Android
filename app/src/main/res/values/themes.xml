<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WashBuddyAndroid" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Set a custom actionBarStyle to control the ActionBar's color and text color. -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <!-- Set the background color of the toolbar -->
        <item name="android:background">@color/purple_500</item>
        <!-- Set the text color (title) in the toolbar -->
        <item name="android:titleTextColor">@color/white</item>
        <!-- Set the color of icons in the toolbar -->
        <item name="android:iconTint">@color/white</item>
    </style>

</resources>